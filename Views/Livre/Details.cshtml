@{

    Livre livre = ViewBag.livre;
}

<p>Livre :</p>

<div class="card" style=" width: 300px; margin: auto;" >
    <img class="card-img-top" src="https://via.placeholder.com/460x600?text=Livre" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@livre.Id - @livre.Name</h5>
        <p class="card-text">@livre.Description</p>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6"><p class="text-left" ><strong>Author: </strong>@livre.Author</p></div>
                <div class="col-6"></div>
            </div>
        </div>
       
    </div>
</div>